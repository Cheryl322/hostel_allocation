<mvc:View controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
    xmlns:grid="sap.ui.layout.cssgrid"
    displayBlock="true">

    <Page showHeader="true" title="Hostel Management System" backgroundDesign="Solid">
        
        <content>
            <VBox class="sapUiSmallMargin">
                
                <Title text="Quick Statistics" titleStyle="H3" class="sapUiSmallMarginBottom"/>

                <grid:CSSGrid gridTemplateColumns="repeat(auto-fit, minmax(16rem, 1fr))" gridGap="1rem">
                    
                    <f:Card class="sapUiTinyMarginBeginEnd">
                        <f:content>
                            <VBox class="sapUiSmallMargin">
                                <HBox justifyContent="SpaceBetween" alignItems="Start">
                                    <core:Icon src="sap-icon://request" size="1.5rem" color="#3b5998"/>
                                    <ObjectStatus text="+12%" state="Success"/>
                                </HBox>
                                <Title text="245" level="H1" class="sapUiTinyMarginTop"/>
                                <Label text="Hostel Applications"/>
                                <Text text="45 pending review" class="sapUiTinyMarginTop" renderWhitespace="true"/>
                            </VBox>
                        </f:content>
                    </f:Card>

                    <f:Card class="sapUiTinyMarginBeginEnd">
                        <f:content>
                            <VBox class="sapUiSmallMargin">
                                <HBox justifyContent="SpaceBetween" alignItems="Start">
                                    <core:Icon src="sap-icon://wrench" size="1.5rem" color="#e67e22"/>
                                    <ObjectStatus text="+8%" state="Success"/>
                                </HBox>
                                <Title text="67" level="H1" class="sapUiTinyMarginTop"/>
                                <Label text="Maintenance Requests"/>
                                <Text text="23 in progress" class="sapUiTinyMarginTop"/>
                            </VBox>
                        </f:content>
                    </f:Card>

                    <f:Card class="sapUiTinyMarginBeginEnd">
                        <f:content>
                            <VBox class="sapUiSmallMargin">
                                <HBox justifyContent="SpaceBetween" alignItems="Start">
                                    <core:Icon src="sap-icon://bed" size="1.5rem" color="#27ae60"/>
                                    <ObjectStatus text="87%" state="Success"/>
                                </HBox>
                                <Title text="1,092" level="H1" class="sapUiTinyMarginTop"/>
                                <Label text="Occupied Rooms"/>
                                <Text text="Out of 1,248 total" class="sapUiTinyMarginTop"/>
                            </VBox>
                        </f:content>
                    </f:Card>

                    <f:Card class="sapUiTinyMarginBeginEnd">
                        <f:content>
                            <VBox class="sapUiSmallMargin">
                                <HBox justifyContent="SpaceBetween" alignItems="Start">
                                    <core:Icon src="sap-icon://log" size="1.5rem" color="#8e44ad"/>
                                    <ObjectStatus text="Today" state="None"/>
                                </HBox>
                                <Title text="34" level="H1" class="sapUiTinyMarginTop"/>
                                <Label text="Check-In Today"/>
                                <Text text="12 check-out scheduled" class="sapUiTinyMarginTop"/>
                            </VBox>
                        </f:content>
                    </f:Card>

                    <f:Card class="sapUiTinyMarginBeginEnd">
                        <f:content>
                            <VBox class="sapUiSmallMargin">
                                <HBox justifyContent="SpaceBetween" alignItems="Start">
                                    <core:Icon src="sap-icon://group" size="1.5rem" color="#2980b9"/>
                                    <ObjectStatus text="+5%" state="Success"/>
                                </HBox>
                                <Title text="1,248" level="H1" class="sapUiTinyMarginTop"/>
                                <Label text="Total Residents"/>
                                <Text text="Active students" class="sapUiTinyMarginTop"/>
                            </VBox>
                        </f:content>
                    </f:Card>

                    <f:Card class="sapUiTinyMarginBeginEnd">
                        <f:content>
                            <VBox class="sapUiSmallMargin">
                                <HBox justifyContent="SpaceBetween" alignItems="Start">
                                    <core:Icon src="sap-icon://money-bills" size="1.5rem" color="#2ecc71"/>
                                    <ObjectStatus text="-15%" state="Error"/>
                                </HBox>
                                <Title text="RM 970,296" level="H1" class="sapUiTinyMarginTop"/>
                                <Label text="Revenue Collected"/>
                                <Text text="This semester" class="sapUiTinyMarginTop"/>
                            </VBox>
                        </f:content>
                    </f:Card>

                    <f:Card class="sapUiTinyMarginBeginEnd">
                        <f:content>
                            <VBox class="sapUiSmallMargin">
                                <HBox justifyContent="SpaceBetween" alignItems="Start">
                                    <core:Icon src="sap-icon://pending" size="1.5rem" color="#f1c40f"/>
                                    <ObjectStatus text="-3%" state="Error"/>
                                </HBox>
                                <Title text="156" level="H1" class="sapUiTinyMarginTop"/>
                                <Label text="Pending Payments"/>
                                <Text text="Awaiting processing" class="sapUiTinyMarginTop"/>
                            </VBox>
                        </f:content>
                    </f:Card>

                    <f:Card class="sapUiTinyMarginBeginEnd">
                        <f:content>
                            <VBox class="sapUiSmallMargin">
                                <HBox justifyContent="SpaceBetween" alignItems="Start">
                                    <core:Icon src="sap-icon://accept" size="1.5rem" color="#16a085"/>
                                    <ObjectStatus text="+18%" state="Success"/>
                                </HBox>
                                <Title text="1,092" level="H1" class="sapUiTinyMarginTop"/>
                                <Label text="Completed Payments"/>
                                <Text text="Fully paid students" class="sapUiTinyMarginTop"/>
                            </VBox>
                        </f:content>
                    </f:Card>
                </grid:CSSGrid>

                <grid:CSSGrid gridTemplateColumns="2fr 1fr" gridGap="1rem" class="sapUiMediumMarginTop">
                    
                    <VBox>
                        <f:Card class="sapUiSmallMarginBottom" width="100%">
                            <f:header>
                                <card:Header title="Recent Applications" subtitle="45 pending applications" iconSrc="sap-icon://request"/>
                            </f:header>
                            <f:content>
                                <List items="{dashboard>/recentApplications}" growing="true" growingThreshold="5">
                                    <CustomListItem type="Active">
                                        <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiSmallMargin">
                                            <VBox>
                                                <Title text="{dashboard>name}" level="H5"/>
                                                <Text text="{dashboard>id} â€¢ {dashboard>date}" class="sapUiTinyMarginTop"/>
                                            </VBox>
                                            <ObjectStatus text="{dashboard>status}" state="{dashboard>state}" inverted="true"/>
                                        </HBox>
                                    </CustomListItem>
                                </List>
                            </f:content>
                        </f:Card>

                        <f:Card class="sapUiSmallMarginBottom" width="100%">
                            <f:header>
                                <card:Header title="Room Allocation Status" iconSrc="sap-icon://building"/>
                            </f:header>
                            <f:content>
                                <VBox class="sapUiSmallMargin">
                                    <grid:CSSGrid gridTemplateColumns="1fr 1fr" gridGap="1rem">
                                        <VBox>
                                            <Label text="Block A (KTDI)" design="Bold"/>
                                            <HBox justifyContent="SpaceBetween">
                                                <Text text="Occupied: 298" class="sapUiTinyMarginBottom"/>
                                                <Text text="Avail: 22"/>
                                            </HBox>
                                            <ProgressIndicator percentValue="93" displayValue="93%" state="Success"/>
                                        </VBox>
                                        <VBox>
                                            <Label text="Block B (KTC)" design="Bold"/>
                                            <HBox justifyContent="SpaceBetween">
                                                <Text text="Occupied: 245" class="sapUiTinyMarginBottom"/>
                                                <Text text="Avail: 35"/>
                                            </HBox>
                                            <ProgressIndicator percentValue="88" displayValue="88%" state="Warning"/>
                                        </VBox>
                                        <VBox>
                                            <Label text="Block C (KTR)" design="Bold"/>
                                            <HBox justifyContent="SpaceBetween">
                                                <Text text="Occupied: 312" class="sapUiTinyMarginBottom"/>
                                                <Text text="Avail: 28"/>
                                            </HBox>
                                            <ProgressIndicator percentValue="92" displayValue="92%" state="Success"/>
                                        </VBox>
                                        <VBox>
                                            <Label text="Block D (KTP)" design="Bold"/>
                                            <HBox justifyContent="SpaceBetween">
                                                <Text text="Occupied: 237" class="sapUiTinyMarginBottom"/>
                                                <Text text="Avail: 71"/>
                                            </HBox>
                                            <ProgressIndicator percentValue="77" displayValue="77%" state="Error"/>
                                        </VBox>
                                    </grid:CSSGrid>
                                </VBox>
                            </f:content>
                        </f:Card>

                        <f:Card width="100%">
                            <f:header>
                                <card:Header title="Recent Payment Activities" iconSrc="sap-icon://money-bills"/>
                            </f:header>
                            <f:content>
                                <List items="{dashboard>/recentPayments}">
                                    <ObjectListItem title="{dashboard>name}"
                                        number="{dashboard>amount}"
                                        numberUnit="RM"
                                        intro="{dashboard>time}">
                                        <firstStatus>
                                            <ObjectStatus text="{dashboard>status}" state="{dashboard>state}" />
                                        </firstStatus>
                                    </ObjectListItem>
                                </List>
                            </f:content>
                        </f:Card>
                    </VBox>

                    <VBox>
                        <f:Card class="sapUiSmallMarginBottom">
                            <f:header>
                                <card:Header title="Quick Actions" subtitle="Navigate"/>
                            </f:header>
                            <f:content>
                                <List>
                                    <StandardListItem title="Allocate Room" type="Navigation" press="onNavToAllocate" icon="sap-icon://add"/>
                                    <StandardListItem title="View Availability" type="Navigation" press="onNavToView" icon="sap-icon://display"/>
                                    <StandardListItem title="Update Assignment" type="Navigation" press="onNavToUpdate" icon="sap-icon://edit"/>
                                </List>
                            </f:content>
                        </f:Card>

                        <f:Card class="sapUiSmallMarginBottom">
                            <f:header>
                                <card:Header title="Maintenance Requests" iconSrc="sap-icon://tools-opportunity"/>
                            </f:header>
                            <f:content>
                                <List items="{dashboard>/maintenance}">
                                    <CustomListItem>
                                        <VBox class="sapUiSmallMargin">
                                            <HBox justifyContent="SpaceBetween">
                                                <Label text="{dashboard>issue}" design="Bold"/>
                                                <ObjectStatus text="{dashboard>priority}" state="{dashboard>state}" inverted="true"/>
                                            </HBox>
                                            <Text text="{dashboard>location}" class="sapUiTinyMarginTopBottom"/>
                                            <Text text="Reported by {dashboard>reporter}" class="sapUiTinyMarginBottom" />
                                        </VBox>
                                    </CustomListItem>
                                </List>
                            </f:content>
                        </f:Card>

                        <f:Card>
                            <f:header>
                                <card:Header title="Outstanding Alerts" iconSrc="sap-icon://alert"/>
                            </f:header>
                            <f:content>
                                <VBox class="sapUiSmallMargin">
                                    <MessageStrip text="23 Students with overdue payments (>30 days)" type="Error" showIcon="true" class="sapUiTinyMarginBottom"/>
                                    <MessageStrip text="67 Students with pending payments" type="Warning" showIcon="true" class="sapUiTinyMarginBottom"/>
                                    <MessageStrip text="156 Students with current outstanding" type="Information" showIcon="true"/>
                                </VBox>
                            </f:content>
                        </f:Card>

                    </VBox>
                </grid:CSSGrid>
            </VBox>
        </content>
    </Page>
</mvc:View>